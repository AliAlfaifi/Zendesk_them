<header class="header">
  <div class="header__logo">
    {{#link 'help_center'}}
    {{!-- <img src="{{logo_url}}" alt="{{t 'logo'}}"> --}}
    {{/link}}
  </div>

  <div class="header__right">

    <ul class="header__nav">
      <li class="header__nav-item">
        {{link 'help_center'}}
      </li>
      <li class="header__nav-item">
        <a href="{{page_path 'new_request'}}">{{t 'submit_a_request'}}</a>
      </li>
    </ul>
    <div class="header__user-info">
      {{#if signed_in}}
        <div id="user" class="user-info dropdown" data-helper="user-info">
          <div class="btn with-image dropdown-toggle" role="button">
            {{user_avatar class="user-avatar"}}
            <span id="user-name">{{user_name}}</span>
          </div>
          <div id="user-dropdown" class="dropdown-menu dropdown-menu-caret" role="menu">
            <div role="menu" id="user-menu">
              {{link "my_activities" role="menuitem"}}
              {{my_profile role="menuitem"}}
              {{change_password role="menuitem"}}
              {{link "sign_out" role="menuitem"}}
            </div>
          </div>
        </div>
      {{else}}
        {{#link "sign_in" class="login" role="button" data-auth-action="signin"}}
        {{t 'sign_in'}}
        {{/link}}
      {{/if}}
    </div>
    <div class="header__nav-toggle">
      <div id="toggle">
        <div class="one"></div>
        <div class="two"></div>
        <div class="three"></div>
      </div>
    </div>
  </div>

  <script>
    $("#toggle").click(function () {
      $(this).toggleClass("on");
      $(".header__nav").slideToggle();
    });
  </script>
</header>

<script src="{{asset 'header.js'}}"></script>